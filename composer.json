{
    "name": "nova-framework/app",
    "type": "project",
    "description": "Framework for PHP 5.6+",
    "homepage": "https://github.com/nova-framework/bare-app",
    "license": "MIT",
    "authors": [
        {
            "name": "David Carr",
            "email": "dave@daveismyname.com",
            "homepage": "http://daveismyname.com",
            "role": "Co-author"
        },
        {
            "name": "Virgil-Adrian Teaca",
            "email": "virgil@giulianaeassociati.com",
            "homepage": "http://giulianaeassociati.com",
            "role": "Co-author"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/nova-framework/plugin-installer"
        },
        {
            "type": "git",
            "url": "https://github.com/nova-framework/system"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "nova-framework/plugin-installer": "*",
        "nova-framework/system": "~4.0",
        "ramsey/uuid": "~3.0"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.6"
    },
    "autoload": {
        "classmap": [
            "app/Database/Migrations",
            "app/Database/Seeds"
        ],
        "psr-4": {
            "App\\": "app/",
            "AcmeCorp\\FileField\\": "plugins/FileField/src/",
            "AcmeCorp\\Bootstrap\\": "plugins/Bootstrap/src/",
            "AcmeCorp\\Backend\\": "plugins/Backend/src/",
            "AcmeCorp\\Widgets\\": "plugins/Widgets/src/",
            "AcmeCorp\\Backup\\": "plugins/Backup/src/",
            "AcmeCorp\\FileManager\\": "plugins/FileManager/src/",
            "AcmeCorp\\Notifications\\": "plugins/Notifications/src/",
            "AcmeCorp\\AsyncQueue\\": "plugins/AsyncQueue/src/",
            "AcmeCorp\\NestedSet\\": "plugins/NestedSet/src/",
            "AcmeCorp\\Forensics\\": "plugins/Forensics/src/",
            "AcmeCorp\\Reminders\\": "plugins/Reminders/src/",
            "AcmeCorp\\Platform\\": "plugins/Platform/src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php forge optimize"
        ],
        "post-update-cmd": [
            "php forge clear-compiled",
            "php forge optimize"
        ],
        "post-create-project-cmd": [
            "php forge key:generate"
        ],
        "post-autoload-dump": [
            "Nova\\Composer\\Installer\\PluginInstaller::postAutoloadDump"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
